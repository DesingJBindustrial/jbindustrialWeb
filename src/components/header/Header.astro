---
import FormularioDeConsulta from "../formularioDeConsulta.astro";
import IconoConsulta from "../IconoConsulta.astro";
import datos from "../../../data.json"; // Importar JSON

const { header } = datos;

---

<header class="cajapadre">
    <a class="logoA" href="/">
    <div class="logo-container">
        <img class="logo" src={header.logo.src} alt={header.logo.alt}>
        <h1 class="tituloLogo">{header.tituloLogo}</h1>
    </div>
    </a>
    <div class="hamburger" id={header.hamburger.id}>
        <i class={header.hamburger.iconClass}></i>
    </div>
    <nav class="navbar">
        <ul class="nav-links">
            {header.navbar.links.map(link => (
                <li class={link.class ? link.class : ""}>
                    <a href={link.href} id={link.id ? link.id : ""}>
                        {link.texto}
                    </a>
                </li>
            ))}
        </ul>
    </nav>
</header>

<FormularioDeConsulta />
<IconoConsulta />

<script>
    const hamburgerButton = document.getElementById("hamburgerButton");
    const navbar = document.querySelector(".navbar");

        hamburgerButton.addEventListener("mouseenter", () => {
            navbar.classList.add("active"); // Muestra la navbar al pasar el mouse
        });

        hamburgerButton.addEventListener("mouseleave", () => {
            navbar.classList.remove("active"); // Oculta la navbar al quitar el mouse
        });

        // También se puede agregar un evento de mouseleave al navbar para ocultarlo
        navbar.addEventListener("mouseleave", () => {
            navbar.classList.remove("active"); // Oculta la navbar al salir del menú
        });
</script>

