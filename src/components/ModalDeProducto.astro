<dialog id="productoModal">
    <div class="producto-modal-content">
        <div class="producto-imagen-wrapper">
            <img src="/images/trucker/conjuntoImperneable.png" alt="Imagen de categoría de ropa de seguridad" id="productoImagen">
        </div>        
        <div class="producto-detalle">
            <h2 id="productoTitulo">Título del Producto</h2>
            <p id="productoDescripcion">Descripción del producto.</p>
            <ul id="productoCaracteristicas">
                <li>Gabardina Sanforizada 8 Oz.</li>
                <li>Con Atraques en Bolsillo</li>
                <li>Costuras Reforzadas</li>
            </ul>
            <div class="producto-colores">
                <!-- <span class="color-circle" style="background-color: blue;"></span>
                <span class="color-circle" style="background-color: white;"></span>
                <span class="color-circle" style="background-color: black;"></span> -->
            </div>
            <p>Talle: 34/48, 50/60</p>
            <div class="cajaBotonWhatsapp">
                <a rel="noreferrer" target="_blank" href="https://api.whatsapp.com/send?phone=5491176513751&text=Hola,%20me%20gustaría%20saber%20más%20sobre%20sus%20productos.">
                    <button id="contactarWhatsApp" class="botonWhatsApp">
                        <i class="fa-brands fa-whatsapp"></i> Contactar
                    </button>
                </a>
            </div>
        </div>
    </div>
    <button id="cerrarProductoModal">Cerrar</button>
</dialog>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const productoModal = document.getElementById('productoModal');
        const cerrarProductoModal = document.getElementById('cerrarProductoModal');
        const botonesConsultarPrecio = document.querySelectorAll('.botonConsultarPrecio');
        const verMasButtons = document.querySelectorAll('.verMas');
        const productoImagen = document.getElementById('productoImagen');
        const productoTitulo = document.getElementById('productoTitulo');
        const productoDescripcion = document.getElementById('productoDescripcion');
        const productoCaracteristicas = document.getElementById('productoCaracteristicas');
        const colorProducto = document.querySelector(".producto-colores")

        botonesConsultarPrecio.forEach(boton => {
            boton.addEventListener('click', function () {
                const productoInfo = JSON.parse(boton.getAttribute('data-product'));

                // Update modal with selected product info
                productoImagen.src = productoInfo.imagen;
                productoTitulo.textContent = productoInfo.titulo;
                productoDescripcion.textContent = productoInfo.descripcion;

                // Clear and add characteristics
                productoCaracteristicas.innerHTML = "";
                productoInfo.caracteristicas.forEach(caracteristica => {
                    const li = document.createElement('li');
                    li.textContent = caracteristica;
                    productoCaracteristicas.appendChild(li);
                });
                colorProducto.innerHTML = "";
                productoInfo.color.forEach(color => {
                    const div = document.createElement('div');
                    div.classList.add("color-circle");
                    div.style.backgroundColor=color.valor;
                    div.setAttribute("title", color.nombre);
                   colorProducto.appendChild(div);
                });
                productoModal.showModal();
            });
        });

        cerrarProductoModal.addEventListener('click', function () {
            productoModal.close();
        });

        // Handle Ver más button clicks
        
    });
</script>
