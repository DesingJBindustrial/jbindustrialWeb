---
const { img, titulo, info } = Astro.props;
---

<div class="cajaCategorias" id="cajaCategorias">
    <div class="categorias">
        <img src={img} alt="Imagen de categoría de ropa de seguridad">
        <p>{titulo}</p>
        <button class="botonConsultarPrecio" data-product={JSON.stringify(info)}>Consultar Precio</button>
        <slot />
    </div>
</div>


 

<style>

.cajaCategorias {
    width: 30%;
    margin: 1px auto;
}

.categorias {
    background-color: var(--color-Background); /* Fondo de cada tarjeta */
    color: var(--color-Texto); /* Color del texto */
    border-radius: 8px; /* Bordes redondeados */
    box-shadow: 0px 2px 8px rgba(12, 1, 61, 0.781); /* Sombra para las tarjetas */
    
    margin: 20px; /* Margen entre tarjetas */
    text-align: center; /* Centra el contenido de las tarjetas */
    padding: 20px; /* Espacio interior de las tarjetas */
    transition: box-shadow 0.9s ease, transform 0.9s ease; /* Transición suave para la sombra y el tamaño */
    transform-style: preserve-3d; /* Mantiene la perspectiva en 3D */
}

.subTituloCategoria {
    text-align: center;
    margin: 5%;
    font-size: 2.25rem;
    font-family: var(--fuente-krona);
}

.categorias:hover {
    box-shadow: 0px 8px 24px  rgba(12, 1, 61, 0.781); /* Sombra más pronunciada al pasar el mouse */
    transform: rotateY(5deg) translateY(-20px); /* Rotación y elevación al pasar el mouse */
}

/* Corregí la línea de la clase .categorias img */
.categorias img {
    width: 100%; /* Ocupar el ancho completo del contenedor */
    height: 242px; /* Fijar la altura */
    object-fit: cover; /* Recorta la imagen para llenar el contenedor */
    border-radius: 10px; /* Añadir un borde redondeado */
    margin-bottom: 15px; /* Espacio debajo de la imagen */
}

.botonConsultarPrecio {
    background-color: #5a83eb; /* Color de fondo del botón */
    color: white; /* Color del texto del botón */
    border: none; /* Sin borde */
    padding: 10px 15px; /* Espacio interior del botón */
    border-radius: 5px; /* Bordes redondeados del botón */
    cursor: pointer; /* Cambia el cursor al pasar por encima */
    transition: background-color 0.3s; /* Efecto de transición al pasar el cursor */
    margin: 5%;
}

@media (min-width: 768px) {
    .categorias {
        width: 80%; /* Ajuste del ancho de las tarjetas en pantallas mayores a 768px */
    }
}
@media(max-width:730px){
    .cajaCategorias {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-content: space-between;
 }
}
@media (max-width: 500px) {

    .categorias {
        width: 90%;
        margin: 20px auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
   .subTituloCategoria {
        font-weight: 600;
        font-size: 1.25em;
        font-family: var(--fuente-krona);
        /* margin-left: 80px; */
    }

    .botonConsultarPrecio {
        background-color: #5a83eb;
        color: white;
        border: none;
        padding: 7px 10px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin: 5%;
    }

    .cajaCategorias {
        width: 100%;
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        justify-content: center;
        align-content: space-between;
    }
}

</style> 
